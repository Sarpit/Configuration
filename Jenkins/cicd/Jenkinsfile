pipeline {
    agent any 

    environment {
        image = "arpitdoc/nginx-test"
    }

    stages {
        stage('Build') {
            steps {
                script {
                    sh 'echo "BUILD STAGE"'
                    sh 'whoami'
                    sh 'ls'
                    sh 'pwd'
                    dockerImage  = docker.build("$image:$BUILD_NUMBER")
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'echo "Test STAGE"'
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    sh 'echo "Push STAGE"'
                }
            }
        }
    }
}